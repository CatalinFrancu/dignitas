{
  "name": "Dignitas",
  "version": "1.0.1",
  "default_locale": "en",
  "description": "__MSG_manifestDescription__",
  "short_name": "Dignitas",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_manifestPopupTitle__",
    "default_icon": {
      "16": "img/d-16.png",
      "32": "img/d-32.png",
      "48": "img/d-48.png",
      "128": "img/d-128.png"
    }
  },

  "icons": {
    "16": "img/d-16.png",
    "32": "img/d-32.png",
    "48": "img/d-48.png",
    "128": "img/d-128.png"
  },

  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "http://localhost/",
    "https://dignitas.ro/"
  ],

  "background": {
    "page": "background.html"
  },

  "manifest_version": 2
}
